<?xml version="1.0" encoding="UTF-8"?>

<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

	<!-- Define display/content information -->
		<xsl:output method="xml"/>
		<xsl:output indent="no"/>
		<xsl:output encoding="UTF-8"/>
		<xsl:output media-type="text/css"/>
		<xsl:output omit-xml-declaration="yes"/>

	<xsl:template match="/">
		<xsl:variable name="base" select="concat(/content/base_url,'cb/',/content/callback_code)"/>

		* { background-image: url('<xsl:value-of select="$base"/>/css_attachment'); }

	</xsl:template>

</xsl:stylesheet>
